<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dentacoin.hub" version="0.0.1" android-versionCode="6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:mfp="http://www.ibm.com/mobilefirst/cordova-plugin-mfp">
    <name>Dentacoin Hub App</name>
    <description>
        Dentaprime Hub App is a mobile application, dedicated to the patients of Dentaprime dental clinics. It allows them to manage bookings, earn Dentacoin, and make payments.
    </description>
    <author email="admin@dentacoin.com" href="http://dentacoin.com">
        Dentacoin Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <!--<allow-navigation href="*" />-->
    <preference name="orientation" value="portrait" />
    <platform name="android">
        <preference name="android-targetSdkVersion" value="29" />
        <preference name="android-minSdkVersion" value="22" />
        <allow-intent href="market:*" />
        <icon density="hdpi" height="48" src="/app-resources/images/dentacoin-hub-app-icon-48px.png" width="48" />
        <icon density="xhdpi" height="72" src="/app-resources/images/dentacoin-hub-app-icon-72px.png" width="72" />
        <icon density="xxhdpi" height="144" src="/app-resources/images/dentacoin-hub-app-icon-144px.png" width="144" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="app-resources/images/dentacoin-hub-app-icon-180px.png" width="180" />
        <icon height="60" src="app-resources/images/dentacoin-hub-app-icon-60px.png" width="60" />
        <icon height="120" src="app-resources/images/dentacoin-hub-app-icon-120px.png" width="120" />
        <icon height="76" src="app-resources/images/dentacoin-hub-app-icon-76px.png" width="76" />
        <icon height="152" src="app-resources/images/dentacoin-hub-app-icon-152px.png" width="152" />
        <icon height="40" src="app-resources/images/dentacoin-hub-app-icon-40px.png" width="40" />
        <icon height="80" src="app-resources/images/dentacoin-hub-app-icon-80px.png" width="80" />
        <icon height="57" src="app-resources/images/dentacoin-hub-app-icon-57px.png" width="57" />
        <icon height="114" src="app-resources/images/dentacoin-hub-app-icon-114px.png" width="114" />
        <icon height="72" src="app-resources/images/dentacoin-hub-app-icon-72px.png" width="72" />
        <icon height="144" src="app-resources/images/dentacoin-hub-app-icon-144px.png" width="144" />
        <icon height="29" src="app-resources/images/dentacoin-hub-app-icon-29px.png" width="29" />
        <icon height="58" src="app-resources/images/dentacoin-hub-app-icon-58px.png" width="58" />
        <icon height="50" src="app-resources/images/dentacoin-hub-app-icon-50px.png" width="50" />
        <icon height="100" src="app-resources/images/dentacoin-hub-app-icon-100px.png" width="100" />
        <icon height="167" src="app-resources/images/dentacoin-hub-app-icon-167px.png" width="167" />
        <icon height="20" src="app-resources/images/dentacoin-hub-app-icon-20px.png" width="20" />
        <icon height="127" src="app-resources/images/dentacoin-hub-app-icon-127px.png" width="127" />
        <icon height="196" src="app-resources/images/dentacoin-hub-app-icon-196px.png" width="196" />
        <icon height="24" src="app-resources/images/dentacoin-hub-app-icon-24px.png" width="24" />
        <icon height="44" src="app-resources/images/dentacoin-hub-app-icon-44px.png" width="44" />
        <icon height="48" src="app-resources/images/dentacoin-hub-app-icon-48px.png" width="48" />
        <icon height="55" src="app-resources/images/dentacoin-hub-app-icon-55px.png" width="55" />
        <icon height="87" src="app-resources/images/dentacoin-hub-app-icon-87px.png" width="87" />
        <icon height="88" src="app-resources/images/dentacoin-hub-app-icon-88px.png" width="88" />
        <icon height="1024" src="app-resources/images/dentacoin-hub-app-icon-1024px.png" width="1024" />
        <icon height="1365" src="app-resources/images/dentacoin-hub-app-icon-1365px.png" width="1365" />
        <preference name="ScrollEnabled" value="true" />
    </platform>
    <platform name="android">
        <resource-file src="google-services.json" target="app/google-services.json" />
    </platform>
    <feature name="SocialSharing">
        <param name="ios-package" value="SocialSharing" />
    </feature>
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
    <preference name="SplashScreen" value="none" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <feature name="Launcher">
        <param name="android-package" value="com.hutchind.cordova.plugins.launcher.Launcher" />
    </feature>
    <access origin="*"/>
    <allow-navigation href="https://dentacoin.com/*"/>
    <allow-navigation href="https://dev.dentacoin.com/*"/>
    <allow-navigation href="https://hosted-sip.civic.com/*"/>
    <allow-navigation href="https://civic.com/*"/>
    <allow-navigation href="https://api.civic.com/*"/>
    <preference name="scheme" value="app"/>
    <preference name="hostname" value="localhost"/>
    <universal-links>
        <ios-team-id value="9VFT72C446"/>
        <host name="hubapp.dentacoin.com" scheme="https">
            <path url="/localhost/*/patient-register-by-invite"/>
        </host>
    </universal-links>
</widget>
